{
  "name": "fastapi-react-dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "forwardPorts": [8000, 3000],
  "postCreateCommand": "pip install -r backend/requirements.txt && cd frontend && npm install",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/experiment-app",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "mounts": [
    "source=devcontainer_data,target=/workspaces/experiment-app,type=volume"
  ]
}
